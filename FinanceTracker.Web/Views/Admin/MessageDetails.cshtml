@model FinanceTracker.Domain.Entities.Messages

@{
    ViewData["PageTitle"] = "Message Details";
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<div class="row">
    <div class="col-md-7">
        <div class="widget p-5" style="background-color:#1a202c">
            <!-- Темніший фон -->
            <form id="message-form" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="Id" />

                <!-- Поле Name -->
                <div class="mb-3">
                    <ejs-textbox id="name" value="@Model.Name" floatLabelType="Always" readonly="true" placeholder="Name" style="width: 100%"></ejs-textbox>
                </div>

                <!-- Поле Email -->
                <div class="mb-3">
                    <ejs-textbox id="email" value="@Model.Email" floatLabelType="Always" readonly="true" placeholder="Email" style="width: 100%"></ejs-textbox>
                </div>

                <!-- Поле Message Text -->
                <div class="mb-3">
                    <ejs-textarea id="text" value="@Model.Text" floatLabelType="Always" readonly="true" placeholder="Message Text" style="width: 100%; height: 150px; resize: none;"></ejs-textarea>
                </div>

                <!-- Поле CreatedAt -->
                <div class="mb-3">
                    <ejs-textbox id="created-at" value="@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")" floatLabelType="Always" readonly="true" placeholder="Created At" style="width: 100%"></ejs-textbox>
                </div>

                <!-- Якщо потрібно додати можливість повернення до списку повідомлень -->
                <a href="@Url.Action("Messages", "Admin")" class="btn btn-primary">Back to Messages</a>
            </form>
        </div>
    </div>
    <div class="col-md-5">
        <div class="widget h-100 d-flex justify-content-center align-items-center">
            <i class="fa-solid fa-comments fa-2xl"></i>
        </div>
    </div>
</div>
